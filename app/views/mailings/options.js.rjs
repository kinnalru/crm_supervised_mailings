page.call "crm.flick", :empty, :toggle
page.call "crm.flip_form", :options

if params[:cancel] != "true"
  page[:options].replace_html :partial => "options"
  page.call "crm.set_title", :create_mailing_mail, t(:mailings_options)
else
  page.call "crm.set_title", :create_mailing_mail, t(:mailing_mails)
end
