- sort_by_menu_items = MailingMail.sort_by_fields.inject([]) do |items, field|
  - name = t("option_#{field}")
  - items << %Q[{ name: "#{name}", on_select: function() { #{redraw_mails(:sort_by, field, @mailing.id)} } }]

:plain
  new crm.Menu({
    trigger   : "sort_by",
    fade      : 0.5,
    appear    : 0.5,
    menu_items: [ #{sort_by_menu_items.join(",")} ]
  });