.panel#summary
  .caption #{t :mailing_summary}
  %li
    %dt#mailing_status= t(@mailing.status)
    %tt #{t :status}:
  - unless @mailing.attc_file_name.blank?
    %li
      %dt#mailing_attachment= link_to truncate(@mailing.attc_file_name, 20, "..."), attachment_mailing_path(@mailing)
      %tt #{t :attachment}:
  
  .caption #{t :find_mails}
  %li
    %dt#mailing_stats= @mails_stats[:sent]
    %tt #{t :allready_sent}:
  %li
    %dt#mailing_stats= @mails_stats[:ready]
    %tt #{t :ready}:
  %li
    %dt#mailing_stats= @mails_stats[:needs_data]
    %tt #{t :needs_data}:
  %li
    %dt#mailing_stats= @mails_stats_total
    %tt #{t :total_mails}:    
        
  - unless @mailing.background_info.blank?
    .caption #{t :background_info}
    = auto_link(simple_format h(@mailing.background_info))